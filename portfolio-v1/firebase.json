{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "y"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "dist/portfolio-v1",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
